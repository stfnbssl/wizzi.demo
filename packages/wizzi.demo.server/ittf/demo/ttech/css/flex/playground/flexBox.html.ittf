$group
	
	section
		class controls
		id flexBox
                   
		html/select( display, display, none,
			\b flex;inline-flex

		html/control( flex )
				html/input( flex-grow, small, flex-grow, 1 )
				html/input( flex-shrink, small, flex-shrink, 0 )
				html/input( flex-basis, mid, flex-basis (try 300px or 20%)|flex-basis-tip, auto ) 
                    
		html/control( # of flex items )
				html/span( +, count-increase, count-control small )
				html/span( -, count-decrease, count-control small )
                    
		html/select( flex-direction, flex-direction, none , 
			\b row;row-reverse;column;column-reverse )
					
		html/select( flex-wrap, flex-wrap, none,
			\b wrap;wrap-reverse;nowrap

		html/select( justify-content, justify-content, 
			\b To see a change set 'flex' property to something like 'flex: 0 1 auto'|justify-content-tip,
			\b flex-start;flex-end;center;space-between;space-around

		html/select( align-items, align-items, 
			\b none,
			\b flex-start;flex-end;center;baseline;stretch

		html/select( align-content, align-content, 
			\b none,
			\b flex-start;flex-end;center;space-between;space-around;stretch
