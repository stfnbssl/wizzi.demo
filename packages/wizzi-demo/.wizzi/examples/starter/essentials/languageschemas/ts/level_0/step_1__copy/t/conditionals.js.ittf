$group

	+
	# ========================================
	# CONDITIONALS
	# ========================================
	+

	# 
		# The if, else if, else conditional statement
	if oper === 'sum'
		info 'sum', a + b
	elif oper === 'times'
		info 'times', a * b
	elif oper === 'sub'
		info 'subtract', a - b
	else
		info 'divide', a / b

	# 
		# The switch conditional statement
	switch letter
		case 'a'
			info 'alfa'
		case 'b'
			info 'beta'
		default
			info 'gamma'

