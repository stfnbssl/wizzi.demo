demo_module( wizzi_job_mongodb_level_0_step_1_upload )

	var repo = require('wizzi-repo')

	# Test mongoDb config
	#   mongodbUri 'mongodb://localhost:27017/test'
	#   mongoBaseFolder `c:/wizzifactory/users`
	# example
	#   folder `wizzijob`
	#   of project `demo`
	#   of user `stefi`
	#   has uri
	#     `db://stefi/demo/wizzijob`
	#   and maps to internal mongodb filesystem path
	#     `c:/wizzifactory/users/stefi/demo/wizzijob`

	var testMongodbUri = 'mongodb://localhost:27017/test'
	var testMongoBaseFolder = 'c:/wizzifactory/users'
	var demoUploadMongoBaseFolder
		_ path.join
			@ testMongoBaseFolder
			@ 'stefi'
			@ 'demo'

	_ repo.mongoDbDocumentManager
		@ testMongodbUri
		f_cb_throw( docman )

			_ heading2('uploadFolder')
			_ docman.uploadFolder
				_ path.join
					@ __dirname
					@ 'step_1'
				_ path.join
					@ demoUploadMongoBaseFolder
					@ 'wizzijob'
					@ 'level_0'
					@ 'step_1'
				f_cb_throw( result )
					_ printValue
						@ 'result'
						@ result
					_ docman.close
